#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <math.h>

struct city {
    char nome[20];
    int x;
    int y;
};
typedef struct city City;


int main(){
    int n,a,b,a1,b1;
    float **mat;
    City *p=NULL;

    printf("\nDigite o numero de cidades desejadas:");
    scanf("%d", &n);
    p=(City*)malloc(n*sizeof(City));

    for (int i=0; i<n; i++){
        fflush(stdin);
        printf("\nDigite o nome da cidade:");
        gets(p->nome);
        printf("%s", p->nome);
        printf("\nDigite as cordenadas x y:");
        scanf("%d %d", &(p+i)->x, &(p+i)->y);
}
    mat = (int**)malloc(n * sizeof(int*));
    for(int i = 0; i < n; i++){
		mat[i] = (int*)malloc(n* sizeof(int));
		}

    for(int i=0; i<n-1; i++){
        for(int j=0; j<2; j++){
            mat[i][j]=sqrt(pow(((p+i+1)->x)-((p+i)->x),2)+pow(((p+i+1)->y)-((p+i)->y),2));;
        }
	}

	printf("\nDigite as cordenadas x y da cidade A;");
	scanf("%d %d", &a,&b);
	printf("\nDigite as cordenadas x y da cidade B;");
	scanf("%d %d", &a1,&b1);

	for (int i=0; i<n; i++){
        if(a==(p+i)->x && b==(p+i)->y){
            for(int j=0; j<n; j++){
                if(a1==(p+j)->x && b1==(p+j)->y){

                }
            }
        }
	}






return 0;
}
